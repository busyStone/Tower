<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/compass_cal_desc"
        style="@style/ModeDetailText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mode_desc_rectangle"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="@string/setup_mag_start"
        />

    <Button
        android:id="@+id/buttonStart"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/button_green_drawable"
        style="@style/modeControl"
        android:layout_gravity="center"
        android:text="@string/button_setup_calibrate"/>

    <RelativeLayout
        android:id="@+id/in_progress_compass_cal_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:gravity="center"

        tools:visibility="visible">

        <ProgressBar
            android:id="@+id/compass_cal_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@android:style/Widget.Holo.ProgressBar.Horizontal"
            android:layout_toLeftOf="@+id/compass_cal_progress"
            android:layout_toStartOf="@+id/compass_cal_progress"
            android:layout_above="@+id/buttonCancel"
            android:layout_marginBottom="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="20dp"
            android:max="100"

            tools:progress="50"/>

        <TextView
            android:id="@+id/compass_cal_progress"
            android:layout_width="wrap_content"
            android:minWidth="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/compass_cal_progress_bar"
            android:layout_alignBottom="@+id/compass_cal_progress_bar"

            tools:text="50%"
            />

        <TextView
            android:id="@+id/compass_cal_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/modeLabel"
            android:padding="10dp"
            android:layout_alignTop="@+id/buttonCancel"
            android:layout_toRightOf="@+id/buttonCancel"

            android:visibility="invisible"

            tools:visibility="visible"
            tools:text="fitness 9.879"
            />

        <Button
            android:id="@+id/buttonCancel"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/button_green_drawable"
            style="@style/modeControl"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="@string/button_setup_cancel"/>

    </RelativeLayout>
</LinearLayout>
